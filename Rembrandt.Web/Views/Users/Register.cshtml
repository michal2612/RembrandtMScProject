@model Rembrandt.Web.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>
@if(!String.IsNullOrWhiteSpace(@Model.ExceptionMessage))
{
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Oh snap!</strong> @Model.ExceptionMessage
</div>
}
<div id="register-form">
  @using (Html.BeginForm("Register", "LogIn"))
  {
    <div class="form-group">
      @Html.LabelFor(m => m.RegisterData.Email, new {@class = ""})
      @Html.TextBoxFor(m => m.RegisterData.Email, new {@class = "form-control", placeholder = "Enter email", type="email", id="exampleInputEmail1"})
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.RegisterData.Password, new {@class = ""})
      @Html.TextBoxFor(m => m.RegisterData.Password, new {type="password", @class="form-control", id="exampleInputPassword1", placeholder="Password"})
    </div>
    <div class="form-group">
      <label>Enter password again</label>
      @Html.TextBoxFor(m => m.RegisterData.RepeatPassword, new {type="password", @class="form-control", id="exampleInputPassword1", placeholder="Password"})
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  }
</div>

@section scripts
{
  <script>
    $(document).ready(function () {

    });
  </script>
}